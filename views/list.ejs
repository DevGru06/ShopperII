<%- include("header") -%>

<main role="main" class="container">

  <!-- search box -->
  <div class="accordion" id="accordionExample">
    <div class="card">
      <div class="marginBgone card-header" id="headingOne">
        <button class="card-button btn btn-link" type="button" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch">
          Search
        </button>
        <% if(pInfo.bdList != null) { %>
        <button class="card-button btn btn-link" type="button" data-toggle="collapse" data-target="#collapseShoppingList" aria-expanded="true" aria-controls="collapseShoppingList">
          Shopping List
        </button>
        <% } %>
      </div>
      <div id="collapseSearch" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="marginBgone card-body">
          <form class="marginBgone form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </div>
    </div> <!-- search box -->

    <% if(pInfo.bdList != null) { %>
    <div class="collapse.show" id="collapseShoppingList">
      <div class="card card-body">
        <div class="">
          <form class="" method="post" action="/item/remove">

            <% pInfo.bdList.forEach(function(i) { %>
            <% switch(i.type){ case "Produce": %>
            <button class="btn btn-primary my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; case "Meat":  %>
            <button class="btn btn-secondary my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; case "Food": %>
            <button class="btn btn-success my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; case "Ingredients": %>
            <button class="btn btn-danger my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; case "Dairy":  %>
            <button class="btn btn-warning my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; case "Snack":  %>
            <button class="btn btn-info my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; case "House Stuff":  %>
            <button class="btn btn-light my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; case "Drink":  %>
            <button class="btn btn-dark my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% break; default: %>
            <button class="btn btn-primary my-btn" name="badge" type="submit" value=<%=i._id %>>
              <%=i.item %>
              <span value="10" name="badge" class="badge badge-light">
                <%=i.quantity %></span></button>
            <% } %>
            <% }); %>

          </form>
        </div>
      </div>
    </div>
    <% } %>

  </div> <!--  accordion -->

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <%if(pInfo.useChecked){ %>
        <th class="item-header">
          Add
        </th>
        <% } %>

        <form class="header" action="/list/sortMe" method="post">
          <th class="item">Item
            <button class="btn btn-primary sm" type="submit" name="title" value="1"><img class="img-sm" src="/sort-26.png" alt="SomeAlternateText"></button>

            <%if(!pInfo.isShopping){ %>
          <th class="type" name="col">Type
            <%  } else { %>
          <th class="type" name="col">Qty
            <%  } %>
            <button class="btn btn-primary sm" type="submit" name="title" value="2"><img class="img-sm" src="/sort-26.png" alt="SomeAlternateText"></button>
        </form>
      </tr>
    </thead>
    <tbody>
      <% if(pInfo.List != null) { %>
      <% pInfo.List.forEach(function(i) { %>
      <% if(!i.checked) { %>
      <tr>
        <form class="useChecked" method="post" action="/item/add">
          <% if(pInfo.useChecked ) { %>
          <td>
            <input class="inputCheckbox" type="checkbox" name="checkbox" onChange="this.form.submit()" value=<%=i._id %>>
          </td>
          <% } %>
        </form>

        <%if(pInfo.useChecked){ %>
        <td>
          <%=i.item%>
        </td>
        <%  } else { %>
        <td>
            <%=i.item%>
        </td>
        <% } %>

        <%if(!pInfo.isShopping){ %>
        <td>
          <%=i.type%>
        </td>
        <%  } else { %>
        <td>
          <%=i.quantity%>
        </td>
        <%  } %>

        <% } %>
        <% });} %>
    </tbody>
  </table>
</main><!-- /.container -->

<%- include("footer") -%>
